<UserControl 
    x:Class="Parole.Game.GameView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Parole.Game"
    mc:Ignorable="d" 
    d:DesignHeight="1400" d:DesignWidth="1200">
    <Grid
        ShowGridLines="False"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="960"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="240"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <Grid 
            x:Name="messageGrid"
            Grid.Row="1" Grid.Column="2"
            ShowGridLines="False"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="160"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0" Grid.Column="0"
                Margin="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                Content="Inizia"
                FontSize="60"
                Command="{Binding StartCommand}"
                Visibility="{Binding StartVisibility}"
                />
            <TextBlock
                Grid.Row="1" Grid.Column="0"
                Margin="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text="{Binding Message}"
                Foreground="DarkOrange"
                FontSize="42"
                Visibility="{Binding MessageVisibility}"
                />
            <TextBlock
                Grid.Row="2" Grid.Column="0"
                Margin="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                TextWrapping="Wrap"
                TextAlignment="Center"
                Text="{Binding Clock}"
                Foreground="DarkOrange"
                FontSize="42"
                Visibility="{Binding ClockVisibility}"
                />
            <Grid
                x:Name="statsGrid"
                Grid.Row="4" Grid.Column="0"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding Plays}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="1" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding Wins}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="2" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding Losses}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="3" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding WinRate}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="4" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding BestStreak}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="5" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="{Binding CurrentStreak}"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <TextBlock
                    Grid.Row="6" 
                    Margin="12 0 0 0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    TextWrapping="Wrap"
                    TextAlignment="Left"
                    Text="Distribuzione delle Ipotesi"
                    Foreground="DarkOrange"
                    FontSize="20"
                    />
                <local:HistogramControl
                    x:Name="histogramControl"
                    DataContext="{Binding Histogram}"
                    Grid.Row="7" 
                    Margin="0 0 0 0"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch"
                    />
            </Grid>
        </Grid>
        <Grid 
            x:Name="tableGrid"
            Grid.Row="1" Grid.Column="1"
            ShowGridLines="False"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid 
            x:Name="spacingGrid"
            ShowGridLines="False"
            Grid.Row="2" Grid.Column="1"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid 
            x:Name="keyboardGrid"
            ShowGridLines="False"
            Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</UserControl>
