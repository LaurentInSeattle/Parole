<UserControl 
    x:Class="Parole.Game.HistogramRowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Parole.Game"
    mc:Ignorable="d" 
    d:DesignHeight="32" d:DesignWidth="320"
    Height="32" Width="320"
    >
    <Grid
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="6"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="1"
            Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            TextAlignment="Center"
            Text="{Binding GuessCount}"
            Foreground="{Binding Path=Instance.UiText, Source={x:Static local:Theme.Instance}}"
            FontSize="20"
            />
        <Rectangle
            Grid.Column="2"
            Margin="0" HorizontalAlignment="Left"
            Width="{Binding RectangleWidth}" 
            Height="16" VerticalAlignment="Center" 
            Fill="{Binding Path=Instance.UiText, Source={x:Static local:Theme.Instance}}"
            />
        <TextBlock
            Grid.Column="3"
            Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            TextAlignment="Center"
            Text="{Binding Count}"
            Foreground="{Binding Path=Instance.UiText, Source={x:Static local:Theme.Instance}}"
            FontSize="20"
            />
    </Grid>
</UserControl>
