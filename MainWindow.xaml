<Window 
    x:Class="Parole.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Parole"
    xmlns:ui="clr-namespace:Parole.Game"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    Width="920" Height="1040"
    MinWidth="320" MinHeight="360"
    Title="Parole" 
    >
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Resources/dark.jpg" Opacity="1"/>
    </Window.Background>
    <Viewbox
        x:Name="viewbox"
        VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
        >
        <Grid
            >
            <ui:GameView
                x:Name="gameView"
                />
        </Grid>
    </Viewbox>
</Window>
